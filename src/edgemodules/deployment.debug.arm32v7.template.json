{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "recupreturnboxacr": {
                "username": "$CONTAINER_REGISTRY_USERNAME_recupreturnboxacr",
                "password": "$CONTAINER_REGISTRY_PASSWORD_recupreturnboxacr",
                "address": "recupreturnboxacr.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "PredictModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.PredictModule}",
              "createOptions": {}
            }
          },
          "CaptureCameraModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CaptureCameraModule.arm32v7}",
              "createOptions": "{\"Env\":[\"CONNECTION_STRING=HostName=RecupReturnBox-iothub.azure-devices.net;DeviceId=recup-raspbi;SharedAccessKey=rJ/DThV1Sskw3DiSVzu9SjY7xgmNKuJKc9gIl0OMaF0=\",\"VIDEO_PATH=./AppleAndBanana.mp4\",\"IMAGE_PROCESSING_ENDPOINT=http://custom-vision-service:80/image\", \"IMAGE_PROCESSING_PARAMS=\", \"SHOW_VIDEO=FALSE\", \"VERBOSE=TRUE\", \"RESIZE_WIDTH=256\", \"RESIZE_HEIGHT=456\", \"LOOP_VIDEO=FALSE\"]}"
            }
          },
          "CustomVisionPrediction": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CustomVisionPrediction}",
              "createOptions": {}
            }
          },
          "custom-vision-service": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "localhost:5000/custom-vision:latest",
              "createOptions": ""
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "PredictModuleToIoTHub": "FROM /messages/modules/PredictModule/outputs/* INTO $upstream",
          "CaptureCameraToIoTHub": "FROM /messages/modules/CaptureCameraModule/outputs/output1 INTO $upstream",
          "CustomVisionPredictionToIoTHub": "FROM /messages/modules/CustomVisionPrediction/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
